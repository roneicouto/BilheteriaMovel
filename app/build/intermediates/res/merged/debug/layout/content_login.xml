<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.bilheteriamovel.LoginActivity"
    tools:showIn="@layout/activity_login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/dataticket"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PASSE CERTO APP"
            android:textAlignment="center"
            android:textSize="40dp"
            android:textColor="#0D204B"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seu passe certo para o estÃ¡dio"
            android:textAlignment="center"
            android:textSize="23dp"
            android:textColor="#0D204B"
            android:layout_marginBottom="10dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppForm"
            android:text="@string/login_txtUser"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/edt_TxtUser"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppForm"
            android:text="@string/login_txtPassw"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/edt_TxtPassw"
            android:inputType="textPassword"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/login_ckbConectado"
            android:text="@string/login_ckbConectado"
            android:layout_marginBottom="7dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppForm"
            android:layout_marginTop="5dp"
            android:text="Entrar"
            android:onClick="logar"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppForm"
            android:layout_marginTop="5dp"
            android:text="Cadastrar-se"
            android:onClick="cUHome"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppForm"
            android:textAlignment="center"
            android:text="RC Tec"
            android:layout_marginTop="7dp"
            android:textSize="20dp"/>


    </LinearLayout>

</ScrollView>
