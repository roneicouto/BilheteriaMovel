<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            style="@style/NomeDosCampos"
            android:text="@string/evento_lbNome"/>

        <EditText
            android:id="@+id/evento_edtN_Evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"/>

        <TextView
            style="@style/NomeDosCampos"
            android:text="@string/evento_lbBilhetes"/>

        <EditText
            android:id="@+id/evento_edtTotaltickets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"/>

        <TextView
            style="@style/NomeDosCampos"
            android:text="@string/evento_lbRestoBilhetes"/>

        <EditText
            android:id="@+id/evento_edtRestickets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"/>

    </LinearLayout>

</ScrollView>